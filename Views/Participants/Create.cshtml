@model TennisLadder.Models.Participant

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Participant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rank" class="control-label"></label>
                <input asp-for="Rank" class="form-control" placeholder="Rank" />
                <span asp-validation-for="Rank" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Wins" value="0" />

            <input type="hidden" asp-for="Loses" value="0" />
            
            <input type="hidden" asp-for="Availability" value="0"/>

            <input type="hidden" asp-for="MatchPending" value="false" />



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
